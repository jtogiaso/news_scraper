<!--Body-->
<main role="main" class="main-dashboard">
    <section id="dashboard-jumbotron" class="jumbotron">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                {{#unless present}}
                    <div class="jumbotron text-center">
                        <h3>{{message}}</h3>
                    </div>
                {{/unless}}
                <ul class="list-unstyled">
                    {{#each data }}
                    <li>
                        <div class="panel panel-success">
                            

                            <div class="panel-heading text-center">
                                <a href="{{link}}">
                                    <h3>
                                        <font color="white">
                                            {{title}}
                                        </font>
                                    </h3>
                                </a>
                            </div>
                            <div class="panel-body">
                            
                                <div class="text-center">
                                    {{#unless this.saved}}
                                    <button type="button" class="btn btn-default save-link" article-id="{{id}}">Save</button>
                                    {{/unless}}
                                    {{#if this.saved}}
                                    <button type="button" class="btn btn-sucess remove-link" article-id="{{id}}">Remove</button>
                                    {{/if}}
                                </div>
                                <br>
                                <br>
                                <div class="text-center">
                                    <div class="forumDiv">
                                        <textarea class="autoExpand forumPost form-control" rows="4" data-min-rows="4" id="ta{{id}}"></textarea>
                                        <button class="forumPostButton btn btn-default" article-id="{{id}}">Post</button>
                                    </div>
                                </div>
                                </br>
                                <div class="panel panel-info">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">Comments</h3>
                                    </div>
                                    <div class="panel-body">
                                        <ol class="list-unstyled list-group" id=ol{{id}}>
                                            {{#each comments}}
                                            <li class="list-group-item">
                                                <div>
                                                    {{text}}
                                                    <br>
                                                    <br>
                                                    <br>
                                                    <br> 
                                                    Posted: {{date}}
                                                </div>
                                            </li>
                                            {{/each}}
                                        </ol>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <!--row-->
    </section>
</main>
<!--End Body -->